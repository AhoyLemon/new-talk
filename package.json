{
  "name": "new-talk",
  "version": "1.0.0",
  "description": "A reveal.js presentation with pug, sass, and modern build tools",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "build": "npm run build:pug && npm run build:sass && npm run build:js",
    "build:pug": "tsx scripts/build-pug.ts",
    "build:sass": "sass scss/lemon.scss:css/lemon.css scss/reveal.scss:css/reveal.css demos/scss/container-queries.scss:demos/css/container-queries.css demos/scss/has.scss:demos/css/has.css demos/scss/scroll-animation.scss:demos/css/scroll-animation.css demos/scss/starting-style.scss:demos/css/starting-style.css demos/scss/text-wrap.scss:demos/css/text-wrap.css demos/scss/toggle.scss:demos/css/toggle.css --no-source-map",
    "build:js": "echo 'No JS build needed for reveal.js presentation'",
    "watch:pug": "tsx scripts/watch-pug.ts",
    "watch:sass": "sass scss/lemon.scss:css/lemon.css scss/reveal.scss:css/reveal.css demos/scss/container-queries.scss:demos/css/container-queries.css demos/scss/has.scss:demos/css/has.css demos/scss/scroll-animation.scss:demos/css/scroll-animation.css demos/scss/starting-style.scss:demos/css/starting-style.css demos/scss/text-wrap.scss:demos/css/text-wrap.css demos/scss/toggle.scss:demos/css/toggle.css --watch --no-source-map",
    "test": "sass scss/lemon.scss:css/lemon.css scss/reveal.scss:css/reveal.css --no-source-map --quiet"
  },
  "keywords": [
    "reveal",
    "slides",
    "presentation"
  ],
  "author": {
    "name": "Lemon",
    "web": "https://ahoylemon.xyz"
  },
  "dependencies": {
    "reveal.js": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "browser-sync": "^3.0.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "ora": "^7.0.1",
    "pug": "^3.0.2",
    "sass": "^1.69.5",
    "tsx": "^4.7.0"
  }
}

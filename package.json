{
  "name": "my-amazing-talk",
  "version": "1.0.0",
  "description": "Fuckin, I dunno, whatever.",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "setup": "tsx scripts/setup.ts",
    "dev": "tsx scripts/dev.ts",
    "build": "npm run build:pug && npm run build:sass && npm run build:js",
    "build:pug": "tsx scripts/build-pug.ts",
    "build:sass": "sass scss/lemon.scss:css/lemon.css scss/reveal.scss:css/reveal.css demos/scss:demos/css --no-source-map",
    "build:js": "echo 'No JS build needed for reveal.js presentation'",
    "watch:pug": "tsx scripts/watch-pug.ts",
    "watch:sass": "sass scss/lemon.scss:css/lemon.css scss/reveal.scss:css/reveal.css demos/scss:demos/css --watch --no-source-map",
    "update:reveal": "tsx scripts/update-reveal.ts",
    "test": "sass scss/lemon.scss:css/lemon.css scss/reveal.scss:css/reveal.css --no-source-map --quiet"
  },
  "keywords": [
    "reveal",
    "slides",
    "presentation"
  ],
  "author": {
    "name": "Lemon",
    "web": "https://ahoylemon.xyz"
  },
  "dependencies": {
    "reveal.js": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "browser-sync": "^3.0.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "pug": "^3.0.2",
    "sass": "^1.69.5",
    "tsx": "^4.7.0"
  }
}
